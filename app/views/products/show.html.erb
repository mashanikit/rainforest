  <h2><%= link_to @product.name, product_path(@product) %></h2>
  <p><%= link_to("Edit", "/products/#{@product.id}/edit") %> | <%= link_to("Delete", "/products/#{@product.id}", method: :delete, data: {confirm: "Are you sure you want to delete this product?"})  %></p>
  <p><%= @product.description %></p>
  <p><%= @product.price_in_dollars %></p>

  <% @reviews.each do |review| %>
    <p> Created on: <%=review.created_at.asctime%></p>
    <p> <%=review.text%>
    <%= link_to("Edit", edit_product_review_path(@product, review)) %> | <%= link_to("Delete",  "/products/#{@product.id}/reviews/#{review.id}", method: :delete, data: {confirm: "Are you sure you want to delete this review?"})  %>


    </p>

  <% end %>
  <%= link_to("New", new_product_review_path(@product)) %>
